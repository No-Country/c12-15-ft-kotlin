<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Movienocountry" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- StatusBar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">?android:attr/color</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/white</item>

        <item name="colorSecondary">@color/white_secondary</item>
        <item name="colorOnSecondary">@color/blue</item>

        <item name="colorSurface">@color/blue</item>
        <item name="colorOnSurface">@color/white_secondary</item>

        <item name="android:colorBackground">@color/blue</item>
        <item name="colorOnBackground">@color/white_secondary</item>

        <item name="colorAccent">@color/yellow</item>

        <item name="color">@color/blue</item>

    </style>

    <style name="Theme.Movienocountry" parent="Base.Theme.Movienocountry" />

    <style name="style01" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonStyleDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="TitleToolbar">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextSeach">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>